{
    "name": "seisigmasrl/dgii-rnc-validator",
    "description": "A simple package to check a given RNC with the official Tax Authority, DirecciÃ³n General de Impuestos Internos (DGII), in the Dominican Republic.",
    "keywords": [
        "seisigmasrl",
        "dgii-rnc-validator"
    ],
    "homepage": "https://github.com/seisigmasrl/dgii-rnc-validator",
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo A. Vargas R.",
            "email": "im@ricardovargas.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-soap": "*"
    },
    "require-dev": {
        "pestphp/pest": "^1.22.4",
        "laravel/pint": "^1.4.1",
        "spatie/ray": "^1.36"
    },
    "autoload": {
        "psr-4": {
            "Seisigma\\DgiiRncValidator\\": "src",
            "Seisigma\\DgiiRncValidator\\Helpers\\": "src\\helpers"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Seisigma\\DgiiRncValidator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
